<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Calculadora.MainPage">

    <StackLayout Orientation="Vertical">
        <Label Text="Calculadora" HorizontalOptions="Center" FontSize="Large"/>
        <Entry Placeholder="Ingresa el primer número" x:Name="txtn1"/>
        <Entry Placeholder="Ingresa el segundo número" x:Name="txtn2"/>
        <Label Text="Seleccione una operación" FontSize="Medium"/>
        <Picker x:Name="pkOper" SelectedIndexChanged="pkOper_SelectedIndexChanged"/>
        <Label Text="Resultado" FontSize="Medium" x:Name="lblres"/>
    </StackLayout>

</ContentPage>
